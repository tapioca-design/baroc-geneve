{% extends '::base.html.twig' %}

{% block body -%}
    <h1>City</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Iso3</th>
                <td>{{ entity.iso3 }}</td>
            </tr>
            <tr>
                <th>Nameen</th>
                <td>{{ entity.nameEn }}</td>
            </tr>
            <tr>
                <th>Namefr</th>
                <td>{{ entity.nameFr }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ entity.currency }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('city') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('city_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
