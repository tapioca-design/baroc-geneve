{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Place list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Namefr</th>
                <th>Nameen</th>
                <th>Nameshort</th>
                <th>Googlemapref</th>
                <th>Website</th>
                <th>Imageplacemain</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('place_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nameFr }}</td>
                <td>{{ entity.nameEn }}</td>
                <td>{{ entity.nameShort }}</td>
                <td>{{ entity.googleMapRef }}</td>
                <td>{{ entity.website }}</td>
                <td>{{ entity.imagePlaceMain }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('place_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('place_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('place_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
