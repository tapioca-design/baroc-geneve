{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Work list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Composer</th>
                <th>Interpreter</th>
                <th>Director</th>
                <th>Style</th>
                <th>Description</th>
                <th>Imagemain</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('work_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.composer }}</td>
                <td>{{ entity.interpreter }}</td>
                <td>{{ entity.director }}</td>
                <td>{{ entity.style }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.imageMain }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('work_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('work_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('work_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
