{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Work</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Composer</th>
                <td>{{ entity.composer }}</td>
            </tr>
            <tr>
                <th>Interpreter</th>
                <td>{{ entity.interpreter }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ entity.director }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ entity.style }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Imagemain</th>
                <td>{{ entity.imageMain }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('work') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('work_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
